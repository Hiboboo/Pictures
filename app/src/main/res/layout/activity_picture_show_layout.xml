<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="match_parent">
    <androidx.viewpager.widget.ViewPager
        android:id="@id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="#20FFFFFF">
        <RelativeLayout
            android:id="@+id/group_user_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_user_portrait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/text_user_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_12"
                android:paddingStart="@dimen/dp_6"
                android:paddingEnd="@dimen/dp_6"
                android:layout_toEndOf="@+id/image_user_portrait"/>
            <TextView
                android:id="@+id/text_user_photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_10"
                android:paddingTop="@dimen/dp_6"
                android:paddingStart="@dimen/dp_6"
                android:paddingEnd="@dimen/dp_6"
                android:layout_alignStart="@+id/text_user_nickname"
                android:layout_below="@+id/text_user_nickname"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:gravity="end|center_vertical"
            android:paddingStart="@dimen/dp_12"
            android:paddingEnd="@dimen/dp_12"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/action_item_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/ic_checkbox_collect_bg"/>
            <FrameLayout
                android:layout_width="@dimen/dp_56"
                android:layout_height="wrap_content">
                <com.bobby.pictures.widget.FreshDownloadView
                    android:id="@+id/action_item_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:circular_radius="@dimen/dp_7"
                    app:circular_color="@android:color/white"
                    app:circular_width="@dimen/dp_1"
                    app:circular_progress_color="@color/colorAccent"
                    app:progress_text_size="@dimen/sp_6"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/action_item_download_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_navigation_downloaded_holo_light"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
            </FrameLayout>
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/action_item_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_navigation_share_holo_light"
                android:background="@drawable/transparent"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>